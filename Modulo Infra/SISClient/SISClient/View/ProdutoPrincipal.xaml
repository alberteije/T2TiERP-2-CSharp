<UserControl x:Class="SISClient.View.ProdutoPrincipal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:view="clr-namespace:SISClient.View"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="700">
    <TabControl>
        <TabItem Name="tabProdutoLista" Visibility="Collapsed" IsSelected="{Binding IsListar}">
            <TabItem.Content>
                <DockPanel LastChildFill="True">
                    <view:ProdutoLista></view:ProdutoLista>
                </DockPanel>
            </TabItem.Content>
        </TabItem>
        <TabItem Name="tabProduto" Visibility="Collapsed" IsSelected="{Binding IsEditar}">
            <view:Produto></view:Produto>
        </TabItem>
    </TabControl>
</UserControl>
